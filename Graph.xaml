<Window x:Class="CodeAnalyzer.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dvc="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:local="clr-namespace:CodeAnalyzer"
        mc:Ignorable="d"
        Title="Graph" Height="450" Width="800">
    <!-- Causes stackoverflow exception
    <Window.DataContext>
        <local:Graph/>
    </Window.DataContext>
    -->
    <Grid x:Name="grd">
        <dvc:Chart Canvas.Top="80" Canvas.Left="10" Name="chart"    
            Width="400" Height="250"    
            Background="LightSteelBlue">
            <dvc:Chart.Series>
                <dvc:BarSeries Title="Experience"    
                    IndependentValueBinding="{Binding Path=Key}"    
                    DependentValueBinding="{Binding Path=Value}">
                </dvc:BarSeries>
            </dvc:Chart.Series>
        </dvc:Chart>
    </Grid>
</Window>
